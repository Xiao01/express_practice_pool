<%- include("./header.ejs",{username:username}) %>


<div class="col-lg-7">
  <legend><%= title %></legend>
  <form action="/users/userinfo_update" method="post">
    <div class="form-group">
      <label for="exampleInputEmail1">Email address</label>
      <input value="<%=username%>" readonly type="email" class="form-control" name="username" aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Reset Password</label>
      <input type="password" class="form-control" name="password" placeholder="Password">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Reset Password confirm</label>
      <input type="password" class="form-control" name="password2" placeholder="Password confirm">
    </div>
    <div class="form-group">
        <label class="col-form-label" for="inputDefault">Phone Number</label>
        <input value="<%=phone%>" type="number" class="form-control" name="phone" placeholder="Number input" id="inputDefault">
      </div>
    <div class="form-group">
      <p class="bs-component">
        <button type="submit" class="btn btn-primary btn-lg btn-block">修改</button>
      </p>
    </div>

  </form>
  <div class="form-group">
    <div>已有账号，请立即 <a href="/users/login">登录</a></div>
  </div>
</div>

<%- include("./footer.ejs") %>